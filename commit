#! /bin/sh
if [ -n "$1" ]; then echo "";
else echo "please commit log....."; exit 1
fi

#proceing

echo "\n********add all files*******"
git add *
echo "\n********add finishing*******"

echo "\n********commit all files*******"
git commit -m "$1"
echo "\n********commit finishing*******"

echo "\n********push all files*******"
git push -u origin master
echo "\n********push finishing*******\n"


git log -n 1